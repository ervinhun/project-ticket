<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbPassword" prefHeight="200.0" prefWidth="300.0" spacing="5.0" stylesheets="@css/all.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.ticket.Controllers.AdminProfileController">
        <children>
            <Label text="Change Password">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
            </Label>
            <TextField fx:id="txtOldPass" promptText="Old password">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
            </TextField>
            <TextField fx:id="txtNewPass1" promptText="New Pasword">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin></TextField>
            <TextField fx:id="txtNewPass2" promptText="New password again">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin></TextField>
      <Button fx:id="btnSaveNewPass" mnemonicParsing="false" onAction="#btnSaveNewPassClicked" text="Save">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </Button>
        </children>
    </VBox>
